{
  "version": 6,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 18,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "vcpkg-release",
      "displayName": "vcpkg | Release",
      "binaryDir": "${sourceDir}/build/vcpkg-release",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/vcpkg/scripts/buildsystems/vcpkg.cmake",
        "CMAKE_C_COMPILER": "gcc",
        "CMAKE_CXX_COMPILER": "g++",
        "VCPKG_FEATURE_FLAGS": "manifests",
        "CMAKE_CXX_STANDARD": "20",
        "CMAKE_CXX_STANDARD_REQUIRED": "ON",
        "_GLIBCXX_USE_CXX11_ABI": "1",
        "RDK_INSTALL_INTREE": "OFF",
        "RDK_INSTALL_STATIC_LIBS": "OFF",
        "RDK_BUILD_CPP_TESTS": "OFF",
        "RDK_BUILD_PYTHON_WRAPPERS": "OFF",
        "RDK_BUILD_COORDGEN_SUPPORT": "OFF",
        "RDK_BUILD_MAEPARSER_SUPPORT": "OFF",
        "RDK_OPTIMIZE_POPCNT": "ON",
        "RDK_BUILD_AVALON_SUPPORT": "ON",
        "RDK_BUILD_INCHI_SUPPORT": "ON",
        "RDK_BUILD_YAEHMOP_SUPPORT": "ON",
        "RDK_BUILD_XYZ2MOL_SUPPORT": "ON",
        "RDK_BUILD_CAIRO_SUPPORT": "ON",
        "RDK_BUILD_QT_SUPPORT": "OFF",
        "RDK_BUILD_SWIG_WRAPPERS": "OFF",
        "RDK_SWIG_STATIC": "OFF",
        "RDK_BUILD_THREADSAFE_SSS": "ON",
        "RDK_TEST_MULTITHREADED": "ON",
        "RDK_BUILD_CFFI_LIB": "OFF"
      }
    },
    {
      "name": "vcpkg-debug",
      "displayName": "vcpkg | Debug",
      "inherits": "vcpkg-release",
      "binaryDir": "${sourceDir}/build/vcpkg-debug",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "vcpkg-release-build",
      "displayName": "Build | vcpkg Release",
      "configurePreset": "vcpkg-release",
      "configuration": "Release"
    },
    {
      "name": "vcpkg-debug-build",
      "displayName": "Build | vcpkg Debug",
      "configurePreset": "vcpkg-debug",
      "configuration": "Debug"
    }
  ]
}
